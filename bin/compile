#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>


shopt -s dotglob
set -e

# ------------------------------------------------------------------------------------------------

compile_build_dir=$1
compile_cache_dir=$2
compile_buildpack_dir=$(cd $(dirname $0) && cd .. && pwd)
compile_buildpack_bin=$compile_buildpack_dir/bin

httpd_tgz="$compile_buildpack_dir/binary/httpd-2.4.9.tar.gz"

# ------------------------------------------------------------------------------------------------

cd $compile_build_dir

# ------------------------------------------------------------------------------------------------

echo "-----> Doing work with compiling."
mkdir -p $compile_cache_dir/custom
mv * $compile_cache_dir/custom
mv $compile_cache_dir/custom .
tar -xzf $httpd_tgz

[[ -f public/httpd.conf ]] && mv custom/httpd.conf httpd/conf/httpd.conf
[[ -f public/httpd-vhosts.conf ]] && mv custom/httpd.conf httpd/conf/httpd-vhosts.conf
cp $compile_buildpack_bin/boot.sh .
# ------------------------------------------------------------------------------------------------
